.imago-image(
  ng-class="[{'loaded': imagoimage.loaded}, {'prevent-drag': imagoimage.opts.preventDrag}, imagoimage.opts.align, imagoimage.opts.sizemode]"
  )

  .spacer(ng-style="::imagoimage.spacerStyle" ng-show="imagoimage.height === 0")

  img(
    class="small"
    ng-if="imagoimage.opts.placeholder && !imagoimage.loaded"
    ng-src="{{::imagoimage.data.serving_url}}=s3"
    ng-style="::imagoimage.imgSmallStyle")

  img(
    class="large"
    ng-src="{{imagoimage.imgUrl}}"
    ng-show="imagoimage.imgUrl"
    visible="imagoimage.visible"
    in-view="imagoimage.visible = $inview"
    in-view-remove="imagoimage.removeInView")


  pre sizemode: {{imagoimage.opts.sizemode}}  align: {{imagoimage.opts.align}}
    br
    | class {{imagoimage.loaded}}