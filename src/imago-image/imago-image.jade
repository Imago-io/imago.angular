.imago-image(
  ng-class="[{'loaded': imagoimage.loaded}, {'prevent-drag': imagoimage.opts.preventDrag}, imagoimage.opts.align, imagoimage.opts.sizemode, imagoimage.mainSide]"
  in-view="imagoimage.visible = $inview"
  in-view-remove="imagoimage.removeInView"
  in-view-options="{debounce: 50}"
  )

  .spacer(ng-style="::imagoimage.spacerStyle")

  img.small(
    ng-if="::imagoimage.opts.placeholder"
    ng-src="{{::imagoimage.placeholderUrl}}")

  img.large(
    ng-src="{{imagoimage.imgUrl}}"
    ng-show="::imagoimage.imgUrl")


