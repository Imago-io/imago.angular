.imagoimage(
  visible="imagoimage.visible"
  in-view="imagoimage.visible = $inview"
  in-view-remove="imagoimage.removeInView"
  ng-class="[{'loaded': imagoimage.loaded}, imagoimage.opts.align]"
  )

  .imagox23(ng-style="imagoimage.imageStyle")
    img.placeholder(ng-if="imagoimage.placeholder" ng-src="{{::imagoimage.placeholder.src}}" width="{{::imagoimage.placeholder.width}}" height="{{::imagoimage.placeholder.height}}")
