.imago-image-content(
  ng-class="[{'loaded': imagoimage.loaded}, imagoimage.opts.align, imagoimage.opts.sizemode, imagoimage.mainSide, {'noplaceholder': !imagoimage.opts.placeholder}]"
  in-view="imagoimage.visible = $inview"
  in-view-options="{debounce: 10, offsetTop: -100, offsetBottom: 100}"
  )
  .spacer(ng-style="::imagoimage.spacerStyle")

  img.small(ng-src="{{::imagoimage.placeholderUrl}}")
  img.large(ng-src="{{imagoimage.imgUrl}}")

  .prevent-drag(ng-if="!imagoimage.opts.allowDrag")

