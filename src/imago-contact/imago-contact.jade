.imago-form-content
  form(name="imagoContact" ng-submit="contact.submitForm(imagoContact.$valid)" novalidate ng-if="!contact.status")

    .imago-field
      input(
        type="text"
        name="name"
        id="name"
        ng-model="contact.data.name"
        placeholder="Name"
        required
        )
      label(for="name") Name

    .imago-field
      input(
        type="email"
        name="email"
        id="email"
        ng-model="contact.data.email"
        placeholder="Email"
        required
        )
      label(for="email") Email

    .imago-field
      textarea(
        name="message"
        id="message"
        ng-model="contact.data.message"
        placeholder="Your message."
        required
        msd-elastic="\n"
        )
      label(for="message") Message

    .legal
      p This form collects your name and email so that we can add you to our newsletter list for awesome project updates. Check out our privacy policy for the Full story on how we protect and manage your submitted data!

      .imago-field
        input(
          type="checkbox"
          name="subscribe"
          id="subscribe"
          ng-model="contact.data.subscribe"
          required
          )
        label(for="subscribe") I consent to having my name and email collected.


    .imago-actions
      button.btn.send(type="submit") Send

  .messages(ng-switch="contact.status")
    .success(ng-switch-when="true")
      span Thank You!

    .error(ng-switch-when="false")
      span Error: {{contact.error}}
